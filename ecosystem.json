{
  "apps" : [{
    "name"      : "qnapcollege",
    "script"    : "dist/server/index.js",
    "env": {
      "COMMON_VARIABLE": "true"
    },
    "env_production" : {
      "NODE_ENV": "production"
    }
  }],
  "deploy" : {
    "production" : {
      "key": "/c/Users/chche/.ssh/google_cloud_deploy_openSSH",
      "user" : "deploy",
      "host" : ["blog.qnap.com"],
      "ref"  : "origin/master",
      "repo" : "git@github.com:qqnc/qnap-college.git",
      "path" : "/var/www/qnapcollege",
      "pre-setup": "sudo rm -rf /var/www/qnapcollege/source",
      "post-setup": "npm install --unsafe-perm; npm run pre-build",
      "pre-deploy-local" : "echo 'This is a local executed command'",
      "pre-deploy" : "",
      "post-deploy" : "sudo pm2 startOrRestart ecosystem.json --env production; sudo chown -R deploy:deploy node_modules",
      "env"  : {
        "NODE_ENV": "production"
      }
    }
  }
}
